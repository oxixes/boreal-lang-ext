{
  "name": "boreal-lang",
  "displayName": "Boreal Lang",
  "description": "Adds syntax highlighting support for UPM's ETSIINF's Boreal language used in the \"Traductores de Lenguajes\" subject.",
  "version": "0.0.3",
  "publisher": "oxixes",
  "repository": {
    "type": "git",
    "url": "https://github.com/oxixes/boreal-lang-ext"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/client/src/extension.js",
  "activationEvents": [
    "onLanguage:boreal"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "npm run compile",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.102.0",
    "typescript": "^5.3.0"
  },
  "contributes": {
    "languages": [{
      "id": "boreal",
      "aliases": ["Boreal", "boreal"],
      "extensions": [".boreal",".bor"],
      "configuration": "./language-configuration.json",
      "icon": {
        "dark": "./assets/language-icon.png",
        "light": "./assets/language-icon.png"
      }
    }],
    "grammars": [{
      "language": "boreal",
      "scopeName": "source.boreal",
      "path": "./syntaxes/boreal.tmLanguage.json"
    }],
    "snippets": [
      {
        "language": "boreal",
        "path": "./snippets/program.json"
      },
      {
        "language": "boreal",
        "path": "./snippets/procedure.json"
      },
      {
        "language": "boreal",
        "path": "./snippets/function.json"
      },
      {
        "language": "boreal",
        "path": "./snippets/beginEndBlock.json"
      },
      {
        "language": "boreal",
        "path": "./snippets/loopBlock.json"
      },
      {
        "language": "boreal",
        "path": "./snippets/caseBlock.json"
      },
      {
        "language": "boreal",
        "path": "./snippets/for.json"
      },
      {
        "language": "boreal",
        "path": "./snippets/while.json"
      },
      {
        "language": "boreal",
        "path": "./snippets/repeat.json"
      }
    ]
  }
}
